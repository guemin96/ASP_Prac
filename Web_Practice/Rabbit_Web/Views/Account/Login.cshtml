@model Rabbit_Web.ViewModel.LoginViewModel
<h2>로그인 페이지입니다.</h2>

<form asp-controller="Account" asp-action="Login"  method="post">
    <div style="color:red" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
           <label>사용자 ID</label>
           <input type="text" class="form-control" asp-for="UserId" placeholder="사용자 아이디 입력"/>
           <span style="color:red" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>사용자 비밀번호</label>
        <input type="password" class="form-control" asp-for="UserPassword" placeholder="사용자 비밀번호 입력" />
        <span style="color:red" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">로그인</button>
    </div>
</form>